<?xml version="1.0"?>
<robot name="chancellor">

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>
    <material name="green">
        <color rgba="0 1 0 1" />
    </material>
    <material name="blue">
        <color rgba="0 0 1 1" />
    </material>
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.3 1" />
            </geometry>
            <origin xyz="0 0 0.5" rpy="0 0 0" />
            <material name="green" />
        </visual>
    </link>

    <link name="neeck">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.1" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="green" />
        </visual>
    </link>

    <link name="head">
        <visual>
            <geometry>
                <sphere radius="0.2" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="white" />
        </visual>
    </link>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.1" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="blue" />
        </visual>
    </link>
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.1" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="blue" />
        </visual>
    </link>


    <joint name="base_neeck_joint" type="fixed">
        <parent link="base_link" />
        <child link="neeck" />
        <origin xyz="0 0 1.05" rpy="0 0 0" />
        <axis xyz="1 0 0" />
    </joint>
    <joint name="neeck_head_joint" type="continuous">
        <parent link="neeck" />
        <child link="head" />
        <origin xyz="0 0 0.25" rpy="0 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="0.3 0 0.1" rpy="0 0 0" />
        <axis xyz="0 1 0" rpy="0 0 0" />
    </joint>

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="-0.3 0 0.1" rpy="0 0 0" />
        <axis xyz="0 1 0" rpy="0 0 0" />
    </joint>
</robot>