<?xml version="1.0"?>
<robot name="simple_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="box_size" value="1.0" />
    <xacro:property name="length" value="1.6" />
    <xacro:property name="radius" value="0.3" />
    <xacro:property name="prismatic_upper" value="1.0" />
    <xacro:property name="prismatic_lower" value="-1.0" />
    <xacro:property name="prismatic_velocity" value="0.8" />
    <xacro:property name="prismatic_effort" value="3000" />
    <xacro:property name="slab_length" value="1.0" />
    <xacro:property name="slab_breath" value="0.3" />
    <xacro:property name="slab_height" value="0.5" />
    <xacro:property name="sphere_radius" value="0.3" />

    <xacro:include filename="/home/ranzant197/material_color.xacro" />

    <link name="base_link">
        <visual>
            <geometry>
                <box size="${box_size} ${box_size} ${box_size}" />
            </geometry>
            <origin xyz="0 0 0.5" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>

    <link name="link1">
        <visual>
            <geometry>
                <cylinder length="${length}" radius="${radius}" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <material name="black" />
        </visual>
    </link>

    <link name="link2">
        <visual>
            <geometry>
                <cylinder length="${length}" radius="${radius}" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <material name="white" />
        </visual>
    </link>

    <link name="link3">
        <visual>
            <geometry>
                <box size="${slab_length} ${slab_breath} ${slab_height}" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <material name="green" />
        </visual>
    </link>

    <link name="link4">
        <visual>
            <geometry>
                <box size="${slab_length} ${slab_breath} ${slab_height}" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <material name="green" />
        </visual>
    </link>

    <link name="link5">
        <visual>
            <geometry>
                <sphere radius="${sphere_radius}" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <material name="red" />
        </visual>
    </link>

    <joint name="base_link1_joint" type="continuous">
        <parent link="base_link" />
        <child link="link1" />
        <origin rpy="0 0 0" xyz="0 0 1.8" />
        <axis xyz="0 0 1" />
    </joint>

    <joint name="link1_link2_joint" type="prismatic">
        <parent link="link1" />
        <child link="link2" />
        <origin rpy="1.57 0 0" xyz="0 0 0.95" />
        <axis xyz="0 0 1" />
        <limit upper="${prismatic_upper}" lower="${prismatic_lower}"
            velocity="${prismatic_velocity}" effort="${prismatic_effort}" />
    </joint>

    <joint name="link2_link3_joint" type="continuous">
        <parent link="link2" />
        <child link="link3" />
        <origin rpy="1.57 0 0" xyz="0 0 0.95 " />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="link2_link4_joint" type="continuous">
        <parent link="link2" />
        <child link="link4" />
        <origin rpy="1.57 0 0" xyz="0 0 -0.95" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="link2_link5_joint" type="continuous">
        <parent link="link2" />
        <child link="link5" />
        <origin rpy="0 0 0" xyz="0 0.3 0" />
        <axis xyz="0 1 0" />
    </joint>
</robot>